<% include partials/header.ejs %>

    <!-- Hero Section-->
    <section style="background-color: rgb(93, 116, 93); background-size: cover; background-position: center center" class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <h1>Welcome to My Blog- express, share and learn.</h1>
                    <a href="#" class="hero-link">Get Started</a>
                    <a href="#" class="hero-link">Discover More</a>
                </div>
            </div>

        </div>
    </section>

    <!-- Latest Posts -->
    <section class="latest-posts" id="blogs">
        <div class="container">
            <header>
                <h2>Latest from the blog</h2>
                <p class="text-big">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </header>
            <div class="row">
                <% blogs.forEach(function(blog){ %>
                    <div class="post col-md-4">
                        <div class="post-thumbnail">
                            <a href="/blogs/<%=blog._id%>">
                                <img src="<%=blog.image%>" alt="..." class="img-fluid">
                            </a>
                        </div>
                        <div class="post-details">
                            <div class="post-meta d-flex justify-content-between">
                                <div class="date">
                                    <i class="fa fa-clock-o ion-clock"></i>
                                    <%= moment(blog.createdAt).fromNow() %>
                                </div>

                            </div>
                            <a href="/blogs/<%=blog._id%>">
                                <h3 class="h4">
                                    <%=blog.title%>
                                </h3>
                            </a>
                            <p class="text-muted">
                                <%- blog.body.substring(0, 100) %>...
                            </p>
                        </div>

                    </div>
                    <% }); %>

    </section>
    <!-- Newsletter Section-->
    <section class="newsletter no-padding-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Subscribe to Newsletter</h2>
                    <p class="text-big">Subscribe to receive notification of new content and update right in your email.</p>
                </div>
                <div class="col-md-8">
                    <div class="form-holder">
                        <form action="#">
                            <div class="form-group">
                                <input type="email" name="email" id="email" placeholder="Type your email address">
                                <button type="submit" class="submit">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <% include partials/footer.ejs %>